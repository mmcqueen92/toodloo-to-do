<h1>Task List</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= task.completed ? 'Yes' : 'No' %></td>
        <td>
          <%= button_to 'Show', task, method: :get %>
          <%= button_to 'Toggle Status', toggle_status_task_path(task), method: :patch, remote: true %>
          <%= button_to 'Edit', edit_task_path(task), method: :get %>
          <%= button_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

<%= link_to 'New Task', new_task_path %>
