<h1>Edit Task</h1>

<%= form_with(model: @task, url: update_user_task_path, method: :patch) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.date_field :due_date %>
  </div>

  <div class="actions">
    <%= form.submit 'Update Task' %>
  </div>
<% end %>

<%= link_to 'Back', user_tasks_path(current_user) %>
