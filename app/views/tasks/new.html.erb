<%= button_to 'Back', user_tasks_path(current_user), class: 'btn btn-info', method: :get %>
<h1 class="page-title">New Task</h1>

<%= form_with(model: @task, url: create_user_task_path, method: :post, html: { class: 'task-form' }) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter task title', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', placeholder: 'Enter task description', rows: 8 %>
  </div>

  <div class="form-group">
    <%= form.label :due_date %>
    <%= form.date_field :due_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Task', class: 'btn btn-info' %>
  </div>
<% end %>
