<h1>New Task</h1>

<%= form_with(model: @task, url: create_user_task_path, method: :post) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.date_field :due_date %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Task' %>
  </div>
<% end %>

<%= link_to 'Back', user_tasks_path(current_user) %>
